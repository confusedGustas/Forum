<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="Ugnius">
        <createTable tableName="communities">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="uk_community_name"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="is_enabled" type="BOOLEAN"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="topics"
                baseColumnNames="community_id"
                referencedTableName="communities"
                referencedColumnNames="id"
                constraintName="fk_topic_community"/>
    </changeSet>

</databaseChangeLog>